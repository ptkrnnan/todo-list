// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Task {
  id          String    @id @default(uuid())
  title       String
  description String    @default("")
  priority    Priority
  status      Status    @default(pending)
}

enum Priority {
  low
  medium
  high
}

enum Status {
  pending
  progress
  completed
}